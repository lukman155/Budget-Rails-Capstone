<div id="categories">
  <% @categories.each do |category| %>
    <%= link_to category_bills_path(category), class: "card my-4", style: "text-decoration: none; color: #555;" do %>
      <div class="card-body">
        <h2 class="card-title"><%= category.name %></h2>
        <p class="card-text">Total Amount: <%= category.bills.sum(:amount) %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="d-flex justify-content-end">
  <%= link_to "New category", new_category_path, class: "new-bill-button"  %>
</div>
